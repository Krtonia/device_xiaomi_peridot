<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory>

        <!-- Custom VideoPreference for MP4 video -->
        <org.lineageos.settings.touchsampling.VideoPreference
            android:key="htsr_media"
            android:selectable="false" />

        <!-- SwitchPreference for High Touch Polling Rate -->
        <SwitchPreference
            android:defaultValue="false"
            android:key="htsr_enable"
            android:summary="@string/htsr_enable_summary"
            android:title="@string/htsr_enable_title"
            android:showDefault="false" />
    </PreferenceCategory>
</PreferenceScreen>
